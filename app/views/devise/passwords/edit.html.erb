<div class='container flex-col'>
  <h2 class='padding-top-4'>Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field row border">
      <%= image_tag("password-icon.svg", class:'field-icon') %> 
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "New password", class: "format-input" %>
    </div>

    <div class="field row border"">
      <%= image_tag("password-icon.svg", class:'field-icon') %> 
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm New password", class: "format-input" %>
    </div>

    <div class="actions">
      <%= f.submit "Change my password", class: "format-btn-submit" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>