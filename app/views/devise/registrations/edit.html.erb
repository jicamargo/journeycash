<div class='container flex-col'>

  <h2 class="padding-top-4">User account</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field row border">
      <%= image_tag("user-icon.svg", class:'field-icon') %> 
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Your name", class: "field-input" %>
    </div>


    <div class="field row border">
      <%= image_tag("email-icon.svg", class:'field-icon') %> 
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email", class: "field-input" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="row center">
      <span class= "notice">Leave password blank if you don't want to change it</span>
    </div>
    <% if @minimum_password_length %>
      <div class="row center">
        <span class= "notice">
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        </span>
      </div>
    <% end %>
    <div class="field row border">
      <%= image_tag("password-icon.svg", class:'field-icon') %> 
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password (leave blank if you don't want to change it)", class: "field-input" %>
    </div>
    
    <div class="field row border">
      <%= image_tag("password-icon.svg", class:'field-icon') %> 
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password", class: "field-input" %>
    </div>

    <div class="row center">
      <span class= "notice">We need your current password to confirm your changes</span>
    </div>
    <div class="field row border">
      <%= image_tag("password-icon.svg", class:'field-icon') %> 
      <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "Current Password", class: "field-input" %>
    </div>

    <div class="actions">
      <%= f.submit "Update", class: "format-btn-submit" %>
    </div>
  <% end %>

  <div class= "row">
    <%= link_to "Back", :back %>
  </div>

</div>