<div class='container flex-col'>
  <h3 class='padding-top-4'>Welcome, let's get started!</h3>
  <h2 class='padding-top-1'>Register</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field row border">
      <%= image_tag("user-icon.svg", class:'field-icon') %> 
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Your name", class: "field-input" %>
    </div>

    <div class="field row border">
      <%= image_tag("email-icon.svg", class:'field-icon') %> 
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "field-input" %>
    </div>

    <% if @minimum_password_length %>
      <div class="row center">
        <span class= "notice">
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        </span>
      </div>
    <% end %>

    <div class="field row border">
      <%= image_tag("password-icon.svg", class:'field-icon') %> 
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "field-input" %>
    </div>

    <div class="field row border">
      <%= image_tag("password-icon.svg", class:'field-icon') %> 
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password", class: "field-input" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "format-btn-submit" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>