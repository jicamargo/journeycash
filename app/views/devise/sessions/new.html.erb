<div class='container flex-col'>

  <h3 class='padding-top-4'>Welcome, let's get started!</h3>
  <h2 class='padding-top-1'>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field row border">
      <%= image_tag("email-icon.svg", class:'field-icon') %> 
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class:'field-input' %>
    </div>

    <div class="field row border">
      <%= image_tag("password-icon.svg", class:'field-icon') %> 
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class:'field-input'  %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "format-btn-submit" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>