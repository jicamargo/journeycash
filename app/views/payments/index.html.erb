<div class='container flex-col'>
  <h1>Payments</h1>

  <div id="payments">
    <% @payments.each do |payment| %>
      <%= render payment %>
      <p>
        <%= link_to "Show this payment", payment %>
      </p>
    <% end %>
  </div>

  <div class="actions">
    <%= link_to "New payment", new_payment_path, class: "format-btn-submit" %>
  </div>
</div>